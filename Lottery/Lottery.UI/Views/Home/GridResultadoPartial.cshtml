@model List<Lottery.UI.Models.MegaSenaBilheteViewModel>

@if (@Model.Count() > 0)
{
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>
                            Código do Bilhete
                        </td>
                        <td>
                            Números do Billhete
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < @Model.Count(); i++)
                    {
                        <tr>
                            <td>@Model[i].Id</td>
                            <td>@string.Join(",", @Model[i].Numeros)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}